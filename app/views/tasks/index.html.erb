<div class="container">
  <h1>My tasks</h1>
  <section>
    <ul class="list-group">
      <% @tasks.each do |task| %>
      <li class="list-group-item"><%= check_box_tag("completed", value = task.completed, checked = task.completed, options= {} ) %>  <%= link_to task.title, task_path(task) %></li>
      <% end %>
    </ul>
  </section>
  <section>
  <%= link_to "Create a new task", tasks_new_path, class: "btn btn-info" %>
  </section>
</div>
